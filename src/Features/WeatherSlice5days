import { createAsyncThunk, createSlice } from "@reduxjs/toolkit";
import axios from "axios";

export const fetchWeather5days = createAsyncThunk(
  "fetch/weather",
  async (payload, { rejectWithValue, getState, dispatch }) => {
    try {
      const { data } = await axios.get(
        `api.openweathermap.org/data/2.5/forecast?q=${payload}&appid=094b545dde613af5667ba10639a224f8&units=imperial`
      );

      return data;
    } catch (error) {
      if (!error?.response) {
        throw error;
      }
      return rejectWithValue(error?.response?.data);
    }
  }
);

//slices

const weatherSlices5days = createSlice({
  name: "weather5days",
  initialState: { name: "data" },
  extraReducers: (builder) => {
    builder.addCase(fetchWeather5days.pending, (state, action) => {
      state.loading = true;
    });
    builder.addCase(fetchWeather5days.fulfilled, (state, action) => {
      state.weather = action?.payload;
      state.loading = false;
      state.error = undefined;
    });
    builder.addCase(fetchWeather5days.rejected, (state, action) => {
      state.error = action?.payload;
      state.loading = false;
      state.weather = undefined;
    });
  },
});

export default weatherSlices5days.reducer;
